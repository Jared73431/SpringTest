{
  "info": {
    "name": "Car Management API",
    "description": "Spring Boot R2DBC 汽車管理 API 測試集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "汽車管理",
      "description": "基本的汽車 CRUD 操作",
      "item": [
        {
          "name": "取得所有汽車",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cars",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cars"]
            }
          },
          "response": []
        },
        {
          "name": "根據ID取得汽車",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cars/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cars", "1"]
            }
          },
          "response": []
        },
        {
          "name": "建立新汽車",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"make\": \"Toyota\",\n  \"model\": \"Camry\",\n  \"year\": 2023,\n  \"color\": \"White\",\n  \"price\": 30000.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cars",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cars"]
            }
          },
          "response": []
        },
        {
          "name": "更新汽車資訊",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"make\": \"Toyota\",\n  \"model\": \"Camry Hybrid\",\n  \"year\": 2023,\n  \"color\": \"Blue\",\n  \"price\": 32000.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cars/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cars", "1"]
            }
          },
          "response": []
        },
        {
          "name": "刪除汽車",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cars/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cars", "1"]
            }
          },
          "response": []
        }
      ]
    },
    {
